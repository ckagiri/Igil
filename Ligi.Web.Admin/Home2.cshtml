<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Ligi</title>
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/application.css" rel="stylesheet" />
    <link href="~/Assets/css/jquery-ui-1.10.0.custom.css" rel="stylesheet" />
</head>
<body>
    <div id="header-region"></div>
    <div id="main-region" class="container">
        <p>Here is static content in the web page. You'll notice that it gets replaced by our app as soon as we start it.</p>
    </div>
    <div id="footer-region"></div>
    
    <script type="text/template" id="header-template">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="#teams">Ligi admin</a>
                <div class="nav-collapse collapse">
                    <ul class="nav"></ul>
                </div>
            </div>
        </div>
    </script>
    
    <script type="text/template" id="header-link">
        @*<a href="#<%= url %>"><%= name %></a>*@
    </script>
    
    <script type="text/template" id ="team-list-item">
        <td><%= name %></td><td><%= code %></td>
        <td>
            <a href="#teams/<%= id %>/edit" class="btn btn-small js-edit">
                <i class="icon-pencil"></i>
                Edit
            </a>
            <button class="btn btn-small js-delete">
                <i class="icon-remove"></i>
                Delete
            </button>
        </td>
    </script>
    
    <script type="text/template" id="team-list-layout">
        <div id="panel-region"></div>
        <div id="new-region"></div>
        <div id="teams-region"></div>
    </script>
    
    <script type="text/template" id="team-list-panel">
        <button class="btn btn-primary js-new-team">Add team</button><p />
    </script>
    
    <script type="text/template" id ="team-list">
        <thead>
            <tr><th>Name </th><th>Code </th><th></th></tr>
        </thead>
        <tbody>
        </tbody>
    </script>
    
    <script type="text/template" id="team-list-none">
        <td colspan="3">No teams to display</td>
    </script>
    
    <script type="text/template" id="team-view">
        <h1><%= name %></h1>
        <p><strong>Code: <%= code %></strong></p>
        <p><strong>Stadium: <%= homeGround %></strong></p>
        <a href="#teams/<%= id %>/edit" class="btn btn-small js-edit">
            <i class="icon-pencil"></i>
            Edit Team
        </a>
    </script>
    
    <script type="text/template" id="missing-team-view">
        <div class="alert alert-error">This team doesn't exist!</div>
    </script>
    
    <script type="text/template" id="loading-view">
        <h1><%= title %></h1>
        <P><%= message %></P>
        <div id ="spinner"></div>
    </script>
    
    <script type="text/template" id="team-form"> 
        <div class="control-group">
            <label for="team-name" class="control-label">Name: </label>
            <input id="team-name" name="name" type="text" value="<%= name %>"/>
        </div>
        <div class="control-group">
            <label for="team-code" class="control-label">Code: </label>
            <input id="team-code" name="code" type="text" value="<%= code %>" />
        </div>
        <div class="control-group">
            <label for="team-homeGround" class="control-label">Stadium: </label>
            <input id="team-homeGround" name="homeGround" type="text" value="<%= homeGround %>"/>
        </div>
    </script>
    
    <script type="text/template" id="form-content"> 
        <% console.log("form:footer", footer) %>
        <div id="form-content-region"></div>
        <% if (footer) { %>
            <footer>
                <% if (buttons) { %>
                    <div class ="button-container">
                        <% _.each(buttons, function(button) { %>
                            <button type="<%= button.buttonType %>" data-form-button="<%= button.type %>" class="<%= button.className %>"><%= button.text %></button>
                        <% }); %>
                    </div>
                <% } %>
            </footer>
        <% } %>
    </script>
    
    <script type="text/template" id="team-edit-layout">
        <div id="title-region"></div>
        <div id="form-region"></div>    
    </script>
    
    <script type="text/template" id="edit-title">
        <h2>Edit <%= name %></h2>    
    </script>
    
    <script type="text/template" id="team-new"> 
        <div class="control-group">
            <label for="team-name" class="control-label">Name: </label>
            <input name="name" type="text" />
        </div>
    </script>
    
    <script type="text/template" id="about-message">
        <h1>About</h1>
        <p>Nialine Production</p>
    </script>

    <script src="~/Assets/js/vendor/jquery.js"></script>
    <script src="~/Assets/js/vendor/jquery-ui-1.10.3.js"></script>
    <script src="~/Assets/js/vendor/json2.js"></script>
    <script src="~/Assets/js/vendor/underscore.js"></script>
    <script src="~/Assets/js/vendor/backbone.js"></script>
    <script src="~/Assets/js/vendor/backbone.picky.js"></script>
    <script src="~/Assets/js/vendor/backbone.syphon.js"></script>
    <script src="~/Assets/js/vendor/backbone.localstorage.js"></script>
    <script src="~/Assets/js/vendor/backbone.marionette.js"></script>
    <script src="~/Assets/js/vendor/spin.js"></script>
    <script src="~/Assets/js/vendor/spin.jquery.js"></script>
    <script src="~/Assets2/js/ligiadmin/config/jquery.js"></script>
    <script src="~/Assets2/js/ligiadmin/config/backbone/sync.js"></script>
    <script src="~/Assets2/js/ligiadmin/app.js"></script>
    <script src="~/Assets2/js/ligiadmin/config/marionette/application.js"></script>
    <script src="~/Assets2/js/ligiadmin/config/javascript.js"></script>
    <script src="~/Assets2/js/ligiadmin/entities/_base/model.js"></script>
    <script src="~/Assets2/js/ligiadmin/entities/_base/collections.js"></script>
    <script src="~/Assets2/js/ligiadmin/entities/_base/_fetch.js"></script>
    <script src="~/Assets2/js/ligiadmin/entities/abstract/buttons.js"></script>
    <script src="~/Assets2/js/ligiadmin/entities/team.js"></script>
    <script src="~/Assets2/js/ligiadmin/controllers/_base.js"></script>
    <script src="~/Assets2/js/ligiadmin/views/_base/view.js"></script>
    <script src="~/Assets2/js/ligiadmin/views/_base/collectionview.js"></script>
    <script src="~/Assets2/js/ligiadmin/views/_base/compositeview.js"></script>
    <script src="~/Assets2/js/ligiadmin/views/_base/itemview.js"></script>
    <script src="~/Assets2/js/ligiadmin/views/_base/layout.js"></script>
    <script src="~/Assets2/js/ligiadmin/components/form/form_controller.js"></script>
    <script src="~/Assets2/js/ligiadmin/components/form/form_view.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/header/header_app.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/header/list/list_controller.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/header/list/list_view.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/teams/teams_app.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/teams/new/new_controller.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/teams/new/new_view.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/teams/list/list_controller.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/teams/list/list_view.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/teams/edit/edit_controller.js"></script>
    <script src="~/Assets2/js/ligiadmin/apps/teams/edit/edit_view.js"></script>
    <script type="text/javascript">
        LigiAdmin.start();
    </script>
</body>
</html>
